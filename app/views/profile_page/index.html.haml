.span12
  = cms_tag(:h1, @obj, :headline)

  = cms_tag(:div, @obj, :content)

  = form_for(@presenter, url: cms_path(@obj), html: { class: 'form-horizontal' }) do |form|
    %fieldset
      %legend
        = t('.user_legend')

      = form.hidden_field(:id)

      .control-group
        .controls
          = form.label(:gender, value: :F, class: 'radio') do
            = form.radio_button(:gender, :F)

            = t("helpers.label.#{form.object_name}.gender.F")

          = form.label(:gender, value: :M, class: 'radio') do
            = form.radio_button(:gender, :M)

            = t("helpers.label.#{form.object_name}.gender.M")

      .control-group
        = form.label(:first_name, class: 'control-label')

        .controls
          = form.text_field(:first_name)

      .control-group
        = form.label(:last_name, class: 'control-label')

        .controls
          = form.text_field(:last_name, required: true)

      .control-group
        = form.label(:language, class: 'control-label')

        .controls
          = form.select(:language, form.object.language_for_select)

      .control-group
        = form.label(:email, class: 'control-label')

        .controls
          = form.email_field(:email, required: true)

      .control-group
        .controls
          = form.label(:want_email, class: 'checkbox') do
            = form.check_box(:want_email)

            = t("helpers.label.#{form.object_name}.want_email")

    .control-group
      .controls
        = form.submit(class: 'btn')
